@page
@model AddTicketModel

@{
    ViewData["TechName"] = "Add Ticket";
}

<h1>Create</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Ticket.TechnicianId" class="control-label"></label>
                <select asp-for="Ticket.TechnicianId" asp-items="Model.TicketsDropDown" class="form-control">
                    <option value="">--Select Technician--</option> 
                </select>
                <span asp-validation-for="Ticket.TechnicianId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.Name" class="control-label"></label>
                <input asp-for="Ticket.Name" class="form-control" />
                <span asp-validation-for="Ticket.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Ticket" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

